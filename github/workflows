name: Daily Update

on:
  schedule:
    # 每天 00:00 UTC 定時執行，你也可以調整 cron 表示法
    - cron: '0 0 * * *'
  workflow_dispatch:  # 允許手動觸發

jobs:
  update-job:
    runs-on: ubuntu-latest

    steps:
      # 檢出程式碼
      - uses: actions/checkout@v3

      # 安裝 Node.js（指定版本，例如 16）
      - uses: actions/setup-node@v3
        with:
          node-version: '16'

      # 安裝相依套件（如果有 package.json）
      - run: npm install

      # 執行你的測試或更新腳本
      - name: Run update script
        run: node test.cjs

      # 設定 git 使用者資訊
      - name: Configure git
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"

      # 如果有變更則 commit 並 push
      - name: Commit files
        run: |
          git add -A
          git diff-index --quiet HEAD || git commit -m "Daily update $(date)"
      - name: Push changes
        run: git push --force
        env:
          # 當你的 repository 是私人或需要認證時，可以設定 GITHUB_TOKEN，GitHub Actions 會自動提供此環境變數
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
